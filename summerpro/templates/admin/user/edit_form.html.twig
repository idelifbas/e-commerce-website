{% extends 'adminbase.html.twig' %}

{% block title %}Üye Düzenleme{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-body">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Üye Düzenleme</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Adı Soyadı</label>

                                <div class="col-sm-10">
                                    <input type="text" name="user[name]" value="{{ user.name }}" class="form-control" id="inputEmail3" placeholder="Adı Soyadı">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Email</label>

                                <div class="col-sm-10">
                                    <input type="email" name="user[email]" value="{{ user.email }}" class="form-control" id="inputEmail3" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-2 control-label">Şifre</label>

                                <div class="col-sm-10">
                                    <input type="password" name="user[password]" value="{{ user.password }}"  class="form-control" id="inputPassword3" placeholder="Password">
                                    <br>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-2 control-label">Rolü</label>

                                <div class="col-sm-5">
                                    <select name="user[roles]" class="form-control">
                                        {% for item in user.roles %}
                                        <option selected>{{ item }}</option>
                                        {% endfor %}
                                        <option>ROLE_ADMİN</option>
                                        <option>ROLE_USER</option>

                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-2 control-label">Aktif Durumu</label>

                                <div class="col-sm-5">
                                    <select name="user[status]" class="form-control">
                                        <option>{{ user.status }}</option>
                                        <option>True</option>
                                        <option>False</option></select>
                                </div>
                            </div>
                        </div>



                            <a href="{{ path('admin_user') }}" class="btn btn-dark">Cancel</a>

                            <button type="submit" class="btn btn-info pull-right">Kaydet</button>



                    </form>
                </div>
            </div> </div> </div>
{% endblock %}
