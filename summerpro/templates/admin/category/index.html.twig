{% extends 'adminbase.html.twig' %}

{% block title %}Category Listesi{% endblock %}

{% block content %}

    <div class="content">
        <div class="col-sm-9 col-sm-offset-3 col-lg-12 col-lg-offset-0 main">
            <div class="col-lg-12">
                <br><h4>
                    <strong class="">Category Listesi</strong>
                    <small><a href="{{ path('admin_category_new') }}" class="btn btn-info btn-fill pull-right">kategori ekleme</a> </small>
                </h4>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-body">


                            <div class="col-md-12">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Parentid</th>
                                        <th>Title</th>
                                        <th>Keywords</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Göster</th>
                                        <th>Düzenle</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for category in categories %}
                                        <tr>
                                            <td>{{ category.id }}</td>
                                            <td>{{ category.parentid }}</td>
                                            <td>{{ category.title }}</td>
                                            <td>{{ category.keywords }}</td>
                                            <td>{{ category.description }}</td>
                                            <td>{{ category.status }}</td>
                                            <td>
                                                <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-block btn-info btn-xs" >Göster</a>
                                            </td> <td>
                                                <a href="{{ path('admin_category_edit', {'id': category.id, 'pid':category.parentid}) }}" class="btn btn-block btn-primary btn-xs" >Düzenle</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
