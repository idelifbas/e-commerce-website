
<form  class="modal-form" method="post">
    <div class="box-body">

        <div class="form-group">
            <label  class="col-sm-2 control-label">Kategorisi</label>
            <div class="col-sm-10">
                <select name="product[category_id]" class="form-control">
                    {% if(catname) %}
                        <option value="{{ product.categoryid }}">{{ catname[0].title }}</option>
                    {% endif %}
                    {% for cat in catlist %}
                        <option value="{{ cat.id }}">{{ cat.title }}</option>
                    {% endfor %}
                </select>
            </div>


        </div>
        <div class="form-group">
            <label  class="col-sm-2 control-label">Adı</label>

            <div class="col-sm-10">
                <input type="text" name="product[title]" value="{{ product.title }}" class="form-control"  placeholder="title">
            </div>
        </div>
        <br>
        <div class="form-group">
            <label  class="col-sm-2 control-label">Keywords</label>

            <div class="col-sm-10">
                <input type="text" name="product[keywords]" value="{{ product.keywords }}"  class="form-control"  placeholder="keywords">
                <br>
            </div>
        </div>
        <div class="form-group">
            <label  class="col-sm-2 control-label">Alış Fiyatı</label>

            <div class="col-sm-10">
                <input type="text" name="product[pprice]" value="{{ product.pprice  }}"  class="form-control"  placeholder="alış fiyatı..">
                <br>
            </div>
        </div>
        <div class="form-group">
            <label  class="col-sm-2 control-label">Satış Fiyatı</label>

            <div class="col-sm-10">
                <input type="text" name="product[sprice]" value="{{ product.sprice  }}"  class="form-control"  placeholder="satış fiyatı..">
                <br>
            </div>
        </div>
        <div class="form-group">
            <label  class="col-sm-2 control-label">Miktar</label>

            <div class="col-sm-10">

                <input type="text" name="product[amount]" value="{{ product.amount  }}"  class="form-control"  placeholder="description">
                <br>
            </div>
        </div>
        <div class="form-group">
            <label  class="col-sm-2 control-label">Aktif Durumu</label>

            <div class="col-sm-10">
                <select name="product[status]" class="form-control">
                    <option>{{ product.status }}</option>
                    <option>True</option>
                    <option selected>False</option></select>
            </div>
        </div>
        <div class="form-group">
            <label  class="col-sm-2 control-label">Detay</label>

            <div class="col-sm-10">

                <textarea name="content" id="detail" >{{ product.detail }}</textarea>

                <br>
            </div>
        </div>
        <div class="form-group">
            <br>
        </div>
    </div>

    <!-- /.box-body -->
    <div class="box-footer">
        <button type="submit" class="btn btn-info pull-right">Kaydet</button>
    </div>


</form>
<script>
    ClassicEditor
        .create( document.querySelector( '#detail' ) )
        .catch( error => {
            console.error( error );
        } );
</script>