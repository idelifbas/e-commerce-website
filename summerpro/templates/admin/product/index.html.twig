{% extends 'adminbase.html.twig' %}

{% block title %}Ürün Listesi{% endblock %}

{% block content %}

    <div class="content">
        <div class="col-sm-9 col-sm-offset-3 col-lg-12 col-lg-offset-0 main">
            <div class="col-lg-12">
                <br><h4>
                    <strong class="">Ürün Listesi</strong>
                    <small><a href="{{ path('admin_product_new') }}" class="btn btn-info btn-fill pull-right">Ürün ekleme</a> </small>
                </h4>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-body">


                            <div class="col-md-12">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>

                                        <th>Amount</th>
                                        <th>Pprice</th>
                                        <th>Sprice</th>
                                        <th>Min</th>

                                        <th>Image</th>
                                        <th>Gallery</th>
                                        <th>Category_id</th>
                                        <th>Status</th>
                                        <th>Göster</th>
                                        <th>Düzenle</th>
                                        <th>Sil</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td>{{ product.id }}</td>
                                            <td>{{ product.title }}</td>

                                            <td>{{ product.amount }}</td>
                                            <td>{{ product.pprice }}</td>
                                            <td>{{ product.sprice }}</td>
                                            <td>{{ product.min }}</td>

                                            <td>
                                                <a href="javascript:openWin('{{ path('admin_product_iedit', {'id': product.id})  }}','','toolbar=no,location=no,directories=0,status=0,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">
                                                    {% if product.image==null %}
                                                        <img src="{{ asset ('admin') }}/img/image.png{{ product.image }}" height="38">


                                                    {% else %}
                                                        <img src="{{ asset('uploads') }}/images/{{ product.image }}" height="38">

                                                    {% endif %}
                                                </a>
                                            </td>
                                            <td>
                                                <a href="javascript:openWin('{{ path('admin_image_new', {'pid': product.id})  }}','','toolbar=no,location=no,directories=0,status=0,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=1000,height=800');">
                                                    <img src="{{ asset ('admin') }}/img/gallery.png" height="38">
                                                </a>
                                            </td>
                                            <td>{{ product.categoryId }}</td>

                                            <td>{{ product.status }}</td>

                                            <td>
                                                <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-block btn-info btn-xs" >Göster</a>
                                            </td> <td>
                                                <a href="{{ path('admin_product_edit', {'id': product.id})  }}" class="btn btn-block btn-primary btn-xs" > Düzenle</a>
                                            </td><td>
                                                {{ include ('admin/product/_delete_form.html.twig') }}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="16">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
