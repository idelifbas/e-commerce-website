{% extends 'adminbase.html.twig' %}

{% block title %}Mesaj Detayları{% endblock %}

{% block content %}
<div class="content">
    <div class="col-sm-9 col-sm-offset-3 col-lg-12 col-lg-offset-0 main">
        <div class="col-lg-12">
            <br><h4>
                <strong class="">Mesaj Detayları</strong>
                <small><a href="{{ path('admin_messages_new') }}" class="btn btn-info btn-fill pull-right">Mesaj ekleme</a> </small>
            </h4>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-body">
                        {{ include('admin/messages/_delete_form.html.twig') }}

                        <div class="col-md-12">
                            <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ message.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ message.email }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ message.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ message.status }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ message.comment }} <form action="{{ path('admin_messages_update',{'id': message.id}) }}" method="post">
                        <textarea name="comment" cols="20" rows="3"> {{ message.comment }} </textarea>
                        <br>
                        <input type="submit" class="btn btn-primary" value="Güncelle">
                    </form></td>

            </tr>
                            </tbody>
                            </table>
                            <a href="{{ path('admin_messages_index') }}" class="btn btn-dark">Cancel</a>


                            <div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% endblock %}

